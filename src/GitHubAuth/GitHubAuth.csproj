<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>

    <!-- Nuget Package Info -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.2</Version>
    <Authors>Olavo Henrique Dias</Authors>
    <Company>Olavo Henrique Dias</Company>
    <Product>GitHubAuth</Product>
    <Description>A library to facilitate the authentication into the GitHub REST API. Also, the fastest library to generate a JSON Web Token in the format needed for the GitHub API.</Description>
    <Summary>A library to facilitate the authentication into the GitHub REST API. Also, the fastest library to generate a JSON Web Token in the format needed for the GitHub API.</Summary>
    <Copyright>Copyright Â© Olavo Henrique Dias 2023</Copyright>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Title>GitHubAuth.NET</Title>
    <PackageId>GitHubAuth</PackageId>
    <PackageTags>GitHub Apps .NET Git Hub Dot Net JWT Authentication GitHubJWT JSON Web Token</PackageTags>    
    <PackageReadmeFile>README.MD</PackageReadmeFile>
    <PackageIcon>packageIcon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/olavodias/GitHubAuth</PackageProjectUrl>
    <PackageLicenseExpression></PackageLicenseExpression>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RootNamespace>GitHubAuth</RootNamespace>
    <AssemblyName>GitHubAuth</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
      <None Include="packageIcon.png" Pack="true" PackagePath="\" />
      <None Include="../../README.MD" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Jwt\" />
    <None Remove="Extensions\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Jwt\" />
    <Folder Include="Extensions\" />
  </ItemGroup>
</Project>
